{
  "include": [
    "./src/**/*.ts"
  ],
  "compilerOptions": {
    "target": "es6", 
    "module": "commonjs", 
    "outDir": "./dist",                      
    "strict": true, 
    "baseUrl": ".", 
    "paths": {
      "*": [
        "./*"
      ],
      "src/*": [
        "./src/*"
      ]
    }, 
    "types": [
      "node",
      "@wdio/sync",
      "@wdio/jasmine-framework"
    ], 
    "forceConsistentCasingInFileNames": true
  }
}